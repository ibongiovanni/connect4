          </form>
        </div>
        <div class="cuerpo" style="margin-bottom: 40px;">
          <!-- <button class="homeboton" onclick="location.href='/login'">LOGIN
          </button> -->
          <button class="homeboton" onclick="location.href='/user_registration'">SIGN UP!
          </button>         
        </div>
        <audio id="player" controls autoplay="true" hidden="true" loop="true">
          <source src="music/hexagon.mp3" type="audio/mpeg">
        </audio>
        
    </div>
    {{> footer}}
