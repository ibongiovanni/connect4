<script>
	function check(){
		if(create_game.player_1.value == create_game.player_2.value){
			alert('Users cannot be the same!');
			return false;
		}
		return true;		
	}
</script>

<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" type="text/css" href="siteStyle">
		<title>CONNECT4</title>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
    </script>
	</head>
	<body>
		{{> header}}
		<div class="marco">
			<div id="navcontainer">
		      	<ul>
		      	<li><a href="/">Home</a></li>
		      	<li><a href="/user_registration">Register</a></li>
		      	<li><a href="/play">Play</a></li>
		        <li><a href="/users">Ranking</a></li>
